<!DOCTYPE html>
<html>
<head>
  <title>RailsChat</title>
  <%= stylesheet_link_tag    "application", "pusher-realtime-chat-widget/src/pusher-chat.css", :media => "all" %>
  <%= javascript_include_tag "http://code.jquery.com/jquery-1.7.1.min.js",
  							 "http://js.pusher.com/2.1/pusher.min.js",
  							 "pusher-realtime-chat-widget/src/js/PusherChatWidget.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
   <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
  <% end %>

  <div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.username %>.
    <%= link_to "Log out", log_out_path %>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
